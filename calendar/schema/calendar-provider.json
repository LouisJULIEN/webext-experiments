[
  {
    "namespace": "manifest",
    "types": [
      {
        "$extend": "WebExtensionManifest",
        "properties": {
          "calendar_provider": {
            "type": "object",
            "optional": true,
            "additionalProperties": { "$ref": "UnrecognizedProperty" },
            "properties": {
              "capabilities": {
                "$ref": "calendar.calendars.CalendarCapabilities",
                "optional": true
              }
            }
          }
        }
      }
    ]
  },
  {
    "namespace": "calendar.provider",
    "events": [
      {
        "name": "onItemCreated",
        "type": "function",
        "parameters": [
          { "name": "calendar", "$ref": "calendar.calendars.Calendar" },
          { "name": "item", "$ref": "calendar.items.CalendarItem" }
        ]
      },
      {
        "name": "onItemUpdated",
        "type": "function",
        "parameters": [
          { "name": "calendar", "$ref": "calendar.calendars.Calendar" },
          { "name": "item", "$ref": "calendar.items.CalendarItem" },
          { "name": "oldItem", "$ref": "calendar.items.CalendarItem" }
        ]
      },
      {
        "name": "onItemRemoved",
        "type": "function",
        "parameters": [
          { "name": "calendar", "$ref": "calendar.calendars.Calendar" },
          { "name": "item", "$ref": "calendar.items.CalendarItem" }
        ]
      },
      {
        "name": "onSync",
        "type": "function",
        "parameters": [
          { "name": "calendar", "$ref": "calendar.calendars.Calendar" }
        ]
      },
      {
        "name": "onResetSync",
        "type": "function",
        "parameters": [
          { "name": "calendar", "$ref": "calendar.calendars.Calendar" }
        ]
      }
    ]
  }
]
